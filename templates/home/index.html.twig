{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}

	{% for article in articles %}

		<div class="container col-sm-5">

			<div class="row bg-light mt-4 shadow">

				<div class="col blog-main">

					<div class="blog-post  ml-4 mr-4 pl-4 pr-4">
						<h2 class="blog-post-title mt-4">{{article.titre}}</h2>
						<p class="blog-post-meta">{{article.date|date('d M Y') }}</p>
						<img src="{{article.img}}" width="90%" class="ml-4" data-toggle="modal" data-target="#m{{article.id}}">
						<p class="blog-post-meta">{{article.txtphoto }}</p>
						</p>
						<p class="h5">{{article.corp}}</p>
					</div>
				</div>
			</div>
		</div>
		
		  
		  <!-- Modal -->
		  <div class="modal fade" id="m{{article.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
			<div class="modal-dialog modal-xl" role="document">
			  <div class="modal-content">
				<div class="modal-header">
				  <h5 class="modal-title" id="exampleModalLabel">{{article.txtphoto }}</h5>
				  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				  </button>
				</div>
				<div class="modal-body">
					<img src="{{article.img}}" width="90%" class="ml-4">
				</div>
			  </div>
			</div>
		  </div>
	{% endfor %}
{% endblock %}
